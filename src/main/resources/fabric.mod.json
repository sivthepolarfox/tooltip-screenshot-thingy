{
    "schemaVersion": 1,
    "id": "toolshot",
    "version": "${version}",
    "name": "Toolshot",
    "description": "Screenshot Tooltips just like they look in game!",
    "authors": [
        "Siv"
    ],
    "contact": { },
    "license": "MIT",
    "environment": "client",
    "icon": "icon.png",
    "entrypoints": {
        "client": [
            {
                "adapter": "kotlin",
                "value": "me.siv.toolshot.Toolshot"
            }
        ],
        "modmenu": [
            "me.siv.toolshot.config.ModMenuCompat"
        ]
    },
    "mixins": [
        "toolshot.mixins.json"
    ],
    "depends": {
        "fabricloader": ">=${loader_version}",
        "fabric": "*",
        "minecraft": "${minecraft_version}"
    },
    "accessWidener": "toolshot.accesswidener"
}
